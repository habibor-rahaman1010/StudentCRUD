@using Core.ViewModel
@model List<UserRolesViewModel>

<h2>User Roles</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="Edit" asp-route-userId="@user.UserId">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
